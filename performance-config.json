{
  "name": "PDV Restaurant Performance Config",
  "version": "1.0.0",
  "monitoring": {
    "enabled": true,
    "endpoints": [
      "https://pdv-flutterr-okbg0yuqe-luandevuxs-projects.vercel.app/",
      "https://pdv-flutterr-okbg0yuqe-luandevuxs-projects.vercel.app/vendas",
      "https://pdv-flutterr-okbg0yuqe-luandevuxs-projects.vercel.app/produtos"
    ],
    "frequency": "hourly",
    "alerts": {
      "performance_budget": {
        "fcp": 2000,
        "lcp": 4000,
        "cls": 0.1,
        "fid": 100,
        "tbt": 300
      },
      "bundle_size": {
        "max_total_size": "10MB",
        "max_js_size": "3MB",
        "max_css_size": "500KB",
        "max_image_size": "2MB"
      }
    }
  },
  "optimization": {
    "flutter": {
      "web_renderer": "canvaskit",
      "tree_shaking": true,
      "source_maps": true,
      "split_debug_info": true,
      "dart_defines": {
        "FLUTTER_WEB_CANVASKIT_URL": "https://unpkg.com/canvaskit-wasm@latest/bin/",
        "FLUTTER_WEB_USE_SKIA": "true"
      }
    },
    "vercel": {
      "compression": {
        "enabled": true,
        "algorithms": ["gzip", "br"]
      },
      "caching": {
        "static_assets": "1y",
        "html": "1h",
        "api": "0s",
        "fonts": "1y",
        "images": "1w"
      },
      "security_headers": {
        "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:; manifest-src 'self';",
        "x_frame_options": "DENY",
        "x_content_type_options": "nosniff",
        "referrer_policy": "strict-origin-when-cross-origin"
      }
    },
    "pwa": {
      "service_worker": true,
      "offline_support": true,
      "background_sync": false,
      "push_notifications": false,
      "install_prompt": true
    }
  },
  "analytics": {
    "vercel_analytics": {
      "enabled": true,
      "track_conversions": true,
      "track_web_vitals": true
    },
    "web_vitals": {
      "fcp": { "good": 1800, "needs_improvement": 3000 },
      "lcp": { "good": 2500, "needs_improvement": 4000 },
      "fid": { "good": 100, "needs_improvement": 300 },
      "cls": { "good": 0.1, "needs_improvement": 0.25 },
      "ttfb": { "good": 800, "needs_improvement": 1800 }
    }
  },
  "lighthouse": {
    "performance_budget": {
      "performance": 80,
      "accessibility": 90,
      "best_practices": 85,
      "seo": 90,
      "pwa": 80
    },
    "audits": {
      "critical": [
        "first-contentful-paint",
        "largest-contentful-paint",
        "cumulative-layout-shift",
        "total-blocking-time",
        "speed-index"
      ],
      "important": [
        "uses-https",
        "uses-http2",
        "uses-text-compression",
        "uses-responsive-images",
        "modern-image-formats",
        "unused-css-rules",
        "unused-javascript"
      ]
    }
  },
  "deployment": {
    "regions": ["gru1", "iad1"],
    "functions": {
      "memory": 1024,
      "timeout": 30
    },
    "env_variables": {
      "NODE_ENV": "production",
      "FLUTTER_WEB_CANVASKIT_URL": "https://unpkg.com/canvaskit-wasm@latest/bin/"
    }
  }
}